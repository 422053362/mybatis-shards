<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="UserMapper">

	<insert id="insertUser" parameterType="org.makersoft.shards.domain.User">
		INSERT INTO ${prefix}maker_shards_user${suffix} 
			(id,username,password) 
		VALUES
			(#{id}, #{username},#{password})
	</insert>
	
	<select id="getById" parameterType="long"
		resultType="org.makersoft.shards.domain.User">
		SELECT * FROM ${prefix}maker_shards_user${suffix} WHERE id = #{id}
	</select>

	<select id="findAllUsers" resultType="org.makersoft.shards.domain.User">
		SELECT * FROM ${prefix}maker_shards_user${suffix}
	</select>

	<select id="UserMapper.count" resultType="int">
		SELECT count(*) FROM ${prefix}maker_shards_user${suffix}
	</select>

	<update id="udpateUser" parameterType="org.makersoft.shards.domain.User">
		UPDATE ${prefix}maker_shards_user${suffix} SET
		password = #{password}
	</update>

	<update id="udpateUserById" parameterType="org.makersoft.shards.domain.User">
		UPDATE ${prefix}maker_shards_user${suffix} SET
		username = #{username},
		password = #{password}
		WHERE id = #{id}
	</update>

	<delete id="deleteById">
		DELETE FROM ${prefix}maker_shards_user${suffix} where id = #{id}
	</delete>

</mapper>